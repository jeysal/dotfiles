#!/usr/bin/env bash

mkdir /tmp/.jdt-ls
tar --keep-newer-files -xf ~/.jdt-ls/jdt-language-server-0.21.0-201806112259.tar.gz -C /tmp/.jdt-ls 2>/dev/null && \
java \
  -Declipse.application=org.eclipse.jdt.ls.core.id1  \
  -Dosgi.bundles.defaultStartLevel=4 \
  -Declipse.product=org.eclipse.jdt.ls.core.product \
  -noverify -Xmx1G -XX:+UseG1GC -XX:+UseStringDeduplication \
  -jar /tmp/.jdt-ls/plugins/org.eclipse.equinox.launcher_1.5.0.v20180512-1130.jar \
  -configuration /tmp/.jdt-ls/config_linux \
  -data $PWD
