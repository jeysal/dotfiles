#exec --no-startup-id yabar

# polybar
exec_always --no-startup-id $HOME/.config/polybar/launch.zsh

# compositor
exec --no-startup-id compton -b

# clipboard manager
exec --no-startup-id xfce4-clipman

# network manager applet
exec --no-startup-id nm-applet

# MEGAsync
exec --no-startup-id sleep 30 && megasync

# redshift
exec --no-startup-id sleep 30 && killall redshift; redshift-gtk

# gdfs (in case the service is not already enabled on login)
exec systemctl --user start gdfs
