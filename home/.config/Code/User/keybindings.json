[
  // windows
  {
    "key": "escape",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "!editorFocus"
  },
  // recents
  {
    "key": "ctrl+6",
    "command": "workbench.action.openNextRecentlyUsedEditorInGroup",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+e",
    "command": "workbench.action.quickOpen",
    "when": "!inQuickOpen"
  },
  // new
  {
    "key": "alt+insert",
    "command": "newFile.createNewFile"
  },
  // format
  {
    "key": "ctrl+l",
    "command": "editor.action.formatDocument",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+alt+l",
    "command": "editor.action.formatDocument",
    "when": "editorTextFocus && !editorReadonly"
  },
  // linter fix
  {
    "key": "ctrl+shift+l",
    "command": "eslint.executeAutofix",
    "when": "editorTextFocus && editorLangId == javascript"
  },
  {
    "key": "ctrl+shift+l",
    "command": "eslint.executeAutofix",
    "when": "editorTextFocus && editorLangId == javascriptreact"
  },
  {
    "key": "ctrl+shift+l",
    "command": "tslint.fixAllProblems",
    "when": "editorTextFocus && editorLangId == typescript"
  },
  {
    "key": "ctrl+shift+l",
    "command": "tslint.fixAllProblems",
    "when": "editorTextFocus && editorLangId == typescriptreact"
  },
  // move lines
  {
    "key": "alt+shift+up",
    "command": "editor.action.moveLinesUpAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "alt+shift+down",
    "command": "editor.action.moveLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  // CamelHumps
  {
    "key": "ctrl+left",
    "command": "subwordNavigation.cursorSubwordLeft",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+right",
    "command": "subwordNavigation.cursorSubwordRight",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+left",
    "command": "subwordNavigation.cursorSubwordLeftSelect",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+right",
    "command": "subwordNavigation.cursorSubwordRightSelect",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+backspace",
    "command": "subwordNavigation.deleteSubwordLeft",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+delete",
    "command": "subwordNavigation.deleteSubwordRight",
    "when": "editorTextFocus"
  },
  // complete statement
  {
    "key": "shift+[Comma]",
    "command": "-smartsemicolon.insert"
  },
  {
    "key": "ctrl+shift+enter",
    "command": "smartsemicolon.insert",
    "when": "editorTextFocus"
  },
  // copypasta
  {
    "key": "ctrl+shift+c",
    "command": "editor.action.clipboardCopyAction",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+v",
    "command": "-markdown.showPreview",
    "when": "editorLangId == 'markdown'"
  },
  {
    "key": "ctrl+shift+v",
    "command": "editor.action.clipboardPasteAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  // additional vim binds
  {
    "key": "ctrl+q",
    "command": "editor.action.showHover"
  }
]
