{
  // window / tabs
  "explorer.openEditors.visible": 0,
  "workbench.editor.showTabs": false,
  "window.menuBarVisibility": "hidden",
  "window.enableMenuBarMnemonics": false,
  "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}${separator}${appName}",
  // theming
  "workbench.colorTheme": "Monokai",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.showWelcomeMessage": false,
  "material-icon-theme.showUpdateMessage": false,
  // ext
  "extensions.autoUpdate": false,
  // term
  "terminal.explorerKind": "external",
  "terminal.external.linuxExec": "kitty",
  // git
  "git.autofetch": false,
  // save
  "files.autoSave": "onWindowChange",
  "files.trimTrailingWhitespace": false,
  "files.insertFinalNewline": true,
  "editor.formatOnSave": false,
  // debug
  "debug.inlineValues": true,
  // autocomplete
  "editor.suggestFontSize": 12,
  "editor.suggestLineHeight": 12,
  // search
  "search.followSymlinks": false,
  // display & editing
  "editor.fontSize": 14,
  "editor.fontFamily": "'Fira Code', 'Hack', 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
  "editor.fontLigatures": true,
  "editor.lineHeight": 17,
  "editor.letterSpacing": -0.2,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "all",
  "editor.cursorBlinking": "smooth",
  "editor.dragAndDrop": false,
  "auto-close-tag.activationOnLanguage": [
    "html",
    "xml",
    "javascriptreact",
    "typescriptreact"
  ],
  // vim
  "vim.leader": " ",
  "vim.ignorecase": false,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.statusBarColorControl": true,
  "vim.statusBarColors.normal": "#666",
  "vim.statusBarColors.insert": "#09e",
  "vim.statusBarColors.visual": "#77f",
  "vim.statusBarColors.visualline": "#77f",
  "vim.statusBarColors.visualblock": "#77f",
  "vim.statusBarColors.replace": "#e26",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<C-u>"
      ],
      "after": [
        "2",
        "0",
        "k"
      ]
    },
    {
      "before": [
        "<C-d>"
      ],
      "after": [
        "2",
        "0",
        "j"
      ]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": [
        "leader",
        "t"
      ],
      "after": [],
      "commands": [
        {
          "command": "workbench.view.explorer"
        }
      ]
    },
    {
      "before": [
        "leader",
        "f"
      ],
      "after": [],
      "commands": [
        {
          "command": "workbench.view.search"
        }
      ]
    },
    {
      "before": [
        "leader",
        "e"
      ],
      "after": [],
      "commands": [
        {
          "command": "workbench.view.search"
        }
      ]
    },
    {
      "before": [
        "leader",
        "q"
      ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.gotoSymbol"
        }
      ]
    },
    {
      "before": [
        "leader",
        "7"
      ],
      "after": [],
      "commands": [
        {
          "command": "editor.action.referenceSearch.trigger"
        }
      ]
    },
    {
      "before": [
        "leader",
        "r"
      ],
      "after": [],
      "commands": [
        {
          "command": "editor.action.rename"
        }
      ]
    },
    {
      "before": [
        "leader",
        "<CR>"
      ],
      "after": [],
      "commands": [
        {
          "command": "editor.action.quickFix"
        }
      ]
    }
  ],
  // JS / TS
  "javascript.validate.enable": false, // usually, we'll have flow / TS for this
  "javascript.referencesCodeLens.enabled": false,
  "javascript.implicitProjectConfig.checkJs": true,
  "typescript.referencesCodeLens.enabled": false,
  "typescript.implementationsCodeLens.enabled": false,
  "typescript.useCodeSnippetsOnMethodSuggest": false,
  // lint
  "eslint.packageManager": "yarn",
  "tslint.packageManager": "yarn",
  // format
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  // LaTeX
  "latex-workshop.latex.outputDir": "./dist",
  "latex-workshop.latex.autoBuild.onSave.enabled": false,
  "latex-workshop.latex.autoBuild.onTexChange.enabled": false,
  "workbench.colorCustomizations": {
    "statusBar.background": "#666",
    "statusBar.noFolderBackground": "#666",
    "statusBar.debuggingBackground": "#666"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
