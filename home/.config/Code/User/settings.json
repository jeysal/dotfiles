{
  // window / tabs
  "explorer.openEditors.visible": 0,
  "workbench.editor.showTabs": false,
  "workbench.panel.location": "bottom",
  "window.menuBarVisibility": "hidden",
  "window.enableMenuBarMnemonics": false,
  "window.title":
    "${dirty}${activeEditorMedium}${separator}${rootName}${separator}${appName}",
  // theming
  "workbench.colorTheme": "Monokai",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.showWelcomeMessage": false,
  "material-icon-theme.showUpdateMessage": false,
  // ext
  "extensions.autoUpdate": false,
  // term
  "terminal.explorerKind": "external",
  "terminal.external.linuxExec": "termite",
  // git
  "git.autofetch": false,
  // save
  "files.autoSave": "onWindowChange",
  "files.trimTrailingWhitespace": false,
  "files.insertFinalNewline": true,
  "editor.formatOnSave": false,
  // debug
  "debug.inlineValues": true,
  // autocomplete
  "editor.suggestFontSize": 12,
  "editor.suggestLineHeight": 12,
  // display & editing
  "editor.fontSize": 14,
  "editor.fontFamily":
    "'Fira Code', 'Hack', 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
  "editor.fontLigatures": true,
  "editor.lineHeight": 17,
  "editor.letterSpacing": -0.2,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "all",
  "editor.cursorBlinking": "smooth",
  "editor.dragAndDrop": false,
  // vim
  "vim.leader": " ",
  "vim.cmdLineInitialColon": true,
  "vim.ignorecase": false,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.statusBarColorControl": false,
  "vim.statusBarColors": {
    "normal": "#666",
    "insert": "#09e",
    "visual": "#77f",
    "visualline": "#77f",
    "visualblock": "#77f",
    "replace": "#e26"
  },
  "vim.otherModesKeyBindings": [
    {
      "before": ["leader", "e"],
      "after": [],
      "commands": [
        {
          "command": "workbench.view.search"
        }
      ]
    },
    {
      "before": ["leader", "q"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.showHover"
        }
      ]
    },
    {
      "before": ["leader", "r"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.rename"
        }
      ]
    },
    {
      "before": ["leader", "t"],
      "after": [],
      "commands": [
        {
          "command": "workbench.view.explorer"
        }
      ]
    },
    {
      "before": ["leader", "<CR>"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.quickFix"
        }
      ]
    }
  ],
  // JS / TS
  "javascript.referencesCodeLens.enabled": false,
  "javascript.implicitProjectConfig.checkJs": true,
  "typescript.referencesCodeLens.enabled": false,
  "typescript.implementationsCodeLens.enabled": false,
  "typescript.useCodeSnippetsOnMethodSuggest": true,
  // lint
  "eslint.packageManager": "yarn",
  "tslint.packageManager": "yarn",
  // format
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all"
}
