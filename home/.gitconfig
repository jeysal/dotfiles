[core]
  eol = lf
  autocrlf = input
[color]
  ui = auto
[alias]
  l = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all

[user]
  name = Tim Seckinger
  email = github@jeys.al

[init]
	defaultBranch = main
[pull]
  rebase = merges
[rebase]
  autosquash = true
[rerere]
  enabled = true

[merge]
  ff = false
  log = true

[merge "mergiraf"]
    name = mergiraf
    driver = mergiraf merge --git %O %A %B -s %S -x %X -y %Y -p %P -l %L

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[url "git@github.com:"]
  insteadOf = "gh:"

[url "git@gitlab.com:"]
  insteadOf = "gl:"

[url "git@bitbucket.org:"]
  insteadOf = "bb:"
